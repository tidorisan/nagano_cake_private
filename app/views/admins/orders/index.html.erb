<div class=“container”>
  <div class=“row”>
    <div class="col-md-6 col-md-offset-1">
      <h4><strong>注文履歴一覧</strong></h4>
    </div>
  </div>

	<div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table">
        <thead>
          <tr class="active">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admins_order_path(order.id) %></td>
              <td><%= "#{order.member.last_name} #{order.member.first_name}" %></td>
              <td><%= order.order_products.sum(:quantity_purchased) %></td>
              <td><%= order.order_status %></td>
            </tr>
          <% end %>
          <%= paginate @order %>
        </tbody>
      </table>

    </div>
    <!-- col -->
  </div>
  <!-- row -->
    
</div>
<!-- container -->