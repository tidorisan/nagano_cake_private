<!-- 動かない　bootstrap -->
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
   	  <% if @product.errors.any? %>
   	    <h4 class="error_message">
   	      記入していない項目があります
   	    </h4>
   	    <div id="error_full_message" class="alert alert-danger">
          <% @product.errors.full_messages.each do |message| %>
   	        <ul>
              <li><%= message %></li>
   	 	      </ul>
   	 	    <% end %>
   	    </div>
   	  <% end %>
    </div>
  </div>

  <%= form_for(@product, url: admins_products_path(@product.id)) do |f| %>
    <div class="row">
      <div class="col-md-3">
        <h4>商品新規登録</h4>
      </div>
    </div>
    <!-- row -->

    <div class="row">
      <div class="col-md-3">
        <!--  画像投稿機能を入れる -->
        <p></p><%= f.attachment_field :image %>
      </div>

      <div class="col-md-4 col-md-offset-1">
        <table class="new_form">
          <tbody>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
          
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :explanation, class: "form-control" %></td>
            </tr>
       
            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :products_type_id, ProductsType.all, :id, :type_name, include_blank: "--選択してください--" %></td>
            </tr>
       
            <tr>
              <td>税抜価格</th>
              <td><%= f.text_field :unit_price, class: "form-control" %><p>円</p></td>
            </tr>
       
            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :sales_status, [["販売中", true],["販売停止中", false]], include_blank: "--選択してください--" %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <!--vol-  -->
    </div>
    <!-- row -->


    <div class="row">
      <div class="col-md-2 col-md-offset-10">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
    </div>
    <!-- row -->
  <% end %>
</div>