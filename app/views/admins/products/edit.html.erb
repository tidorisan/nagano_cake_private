<div class="container">

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
   	  <% if @product.errors.any? %>
   	    <h4 class="error_message">
   	      記入していない項目があります
   	    </h4>
   	    <div id="error_full_message" class="alert alert-danger">
   	      <ul>
   	 	      <% @product.errors.full_messages.each do |message| %>
   	 	        <li><%= messsage %></li>
   	 	      <% end %>
   	      </ul>
   	    </div>
   	  <% end %>
    </div>
  </div>

  <%= form_for @product, url: admins_product_path(@product.id) do |f| %>
    <div class="row">
      <div class="col-md-5 col-md-offset-1">
        <h4>商品編集</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="imag-field">
          <%= f.attachment_field :image %>
        </div>
      </div>

      <div class="col-md-4 col-md-offset-1">
          <table class="edit_form">
            <tbody>
              <tr>
                <th>商品名</th>
                <td><%= f.text_field :name, class: "form-control" %></td>
              </tr>
              <tr>
                <th>商品説明</th>
                <td><%= f.text_area :explanation, class: "form-control" %></td>
              </tr>
              <tr>
                <th>ジャンル</th>
                <td><%= f.collection_select :products_type_id, ProductsType.all, :id, :type_name, include_blank: "--選択してください--" %></td>
              </tr>
              <tr>
                <th>税抜価格</th>
                <td><%= f.text_field :unit_price, class: "form-control" %></td>
              </tr>
              <tr>
                <th>販売ステータス</th>
                <td><%= f.select :sales_status, [["販売中", true],["販売停止中", false]], include_blank: "--選択してください--" %></td>
              </tr>
            </tbody>
          </table>
      </div>
      <!-- col-md-4  -->
    <div class="row">
      <div class="col-md-2 col-md-offset-10">
          <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>