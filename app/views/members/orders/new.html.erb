<div class="container">
	<div class="row">
		<div class="col-xs-12 offset-3">
			<h2>注文情報入力</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<%= form_with url: members_orders_confirm_path, method: :post, local: true do |form| %>
				<table>
					<thead>
						<h3>支払い方法</h3>
					</thead>
					<tbody class="col-xs-12">
						<tr>
							<td>
								<%= form.radio_button :payment_method, :true, checked: true %>
								<%= form.label :payment_method, "クレジットカード",  style: "display: inline-block;" %>
							</td>
						</tr>
						<tr>
							<td>
								<%= form.radio_button :payment_method, :false %>
								<%= form.label :payment_method, "銀行振込", style: "display: inline-block;" %>
							</td>
						</tr>
					</tbody>
				</table>

				<table>
					<thead>
						<h3>お届け先</h3>
					</thead>
					<tbody class="col-xs-12">
						<tr>
							<td>
								<%= form.radio_button :address_option, 0 %>
								<%= form.label :ご自身の住所, class: "display: inline-block;" %>
							</td>
						</tr>
						<tr class="col-xs-12">
							<td>
								<%= "#{current_member.post_number} #{current_member.address} #{current_member.last_name}#{current_member.first_name}" %>
							</td>
						</tr>
						<tr>
							<td>
								<%= form.radio_button :address_option, 1 %>
								<%= form.label :登録済住所から選択, class: "display: inline-block;" %>
							</td>
						</tr>
						<tr class="col-xs-12">
							<td>
								<%= form.select :id , Destination.all.map {|e| [e.full_address, e.id] } %>
							</td>
						</tr>
						<tr>
							<td>
								<%= form.radio_button :address_option, 2 %>
								<%= form.label :新しいお届け先, class: "display: inline-block;" %>
							</td>
						</tr>
						<tr class="col-xs-12">
							<td>
								<%= form.label :post_address, "郵便番号" %>
								<%= form.text_field :post_address %>
							</td>
						</tr>
						<tr class="col-xs-12">
							<td>
								<%= form.label :address, "住所" %>
								<%= form.text_field :address %>
							</td>
						<tr class="col-xs-12">
							<td>
								<%= form.label :full_name, "宛名" %>
								<%= form.text_field :full_name %>
							</td>
						</tr>
						<tr>
							<td>
								<%= form.submit "確認画面へ進む", class: "btn btn-primary" %>
							</td>
						</tr>
					</tbody>
				</table>
			<% end %>
		</div>
	</div>
</div>
